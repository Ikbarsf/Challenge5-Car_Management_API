{
  "openapi": "3.0.0",
  "info": {
    "title": "Challenge FSW 2 Chapter 5",
    "description": "ini challenge kami",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Users",
      "description": "ini API untuk USERS resources"
    },
    {
      "name": "Cars",
      "description": "ini API untuk CARS resources"
    }
  ],
  "servers": [
    {
      "url": "http://localhost:3000/api/v1"
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Users"],
        "summary": "Return hasil hit api login utk member",
        "description": "ini API utk login member",
        "requestBody": {
          "description": "ini request body utk sukses login member",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "heri@mail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "heri123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sukses Login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "token": {
                          "type": "string",
                          "example": "GWHUHGUAWHGUAHGIAWBGVIAHWBVIAW"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Gagal Login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "example": "User tidak terdaftar"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": ["Users"],
        "summary": "Return hasil hit api register",
        "description": "ini API utk register",
        "requestBody": {
          "description": "ini request body utk sukses register",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Heri"
                  },
                  "password": {
                    "type": "string",
                    "example": "heri123"
                  },
                  "email": {
                    "type": "string",
                    "example": "heri@mail.com"
                  },
                  "age": {
                    "type": "integer",
                    "example": 20
                  },
                  "address": {
                    "type": "string",
                    "example": "Jember"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sukses register",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "token": {
                          "type": "string",
                          "example": "GWHUHGUAWHGUAHGIAWBGVIAHWBVIAW"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Gagal Registrasi",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "example": "wrong password atau user gak ada"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/car": {
      "post": {
        "tags": ["Cars"],
        "security": [
          {
            "bearerToken": []
          }
        ],
        "summary": "Return hasil hit api cars",
        "description": "ini API utk create car",
        "requestBody": {
          "description": "ini request body utk sukses car",
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "price": {
                    "type": "integer",
                    "example": 1
                  },
                  "category": {
                    "type": "string",
                    "example": "small"
                  },
                  "description": {
                    "type": "string",
                    "example": "lorem ipsum"
                  },
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Sukses create car",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "token": {
                          "type": "string",
                          "example": "GWHUHGUAWHGUAHGIAWBGVIAHWBVIAW"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Gagal Member login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "Failed"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "example": "wrong password atau user gak ada"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/car/get": {
      "get": {
        "tags": ["Cars"],
        "security": [
          {
            "bearerToken": []
          }
        ],
        "summary": "Return hasil hit api cars",
        "description": "ini API utk get data car"
      },
      "responses": {
        "200": {
          "description": "Sukses get data car",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "example": "Success"
                  },
                  "data": {
                    "type": "object",
                    "properties": {
                      "token": {
                        "type": "string",
                        "example": "GWHUHGUAWHGUAHGIAWBGVIAHWBVIAW"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Gagal mengambil data",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "example": "Failed"
                  },
                  "data": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string",
                        "example": "wrong password atau user gak ada"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "bearerToken": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
